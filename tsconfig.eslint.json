{
    "extends": "./tsconfig.base.json",
    "include": [
        "apps/**/*",
        "core",
        "crates/**/*",
        "packages/**/*",
        "**/.eslintrc.js",
        "**/*.config.js",
        "prettier.config.js",
        "vitest.config.ts",
        "tsup.config.ts",
        ".eslintrc.js"
    ],
    "exclude": [
        "**/.cache/**/*",
        "**/.next/**/*",
        "**/build/**/*",
        "**/cjs/**/*",
        "**/dts/**/*",
        "**/esm/**/*",
        // "**/lib/**/*",
        "**/mjs/**/*",
        "**/node_modules/**/*"
    ]
}
